{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": { "*": ["*", "types/*"] },
    "types": ["react", "react-dom"],
    "moduleResolution": "nodenext"
  },
  "include": ["**/*"]
}
