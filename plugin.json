{
  "manifest_version": 2,
  "id": "mattermost-readreceipts",
  "name": "Read Receipts",
  "description": "WhatsApp/Telegram-style read receipts for Mattermost posts.With Alireza Ghaffari(ARG)",
  "version": "0.1.2",
  "min_server_version": "6.0.0",

  "server": {
    "executables": {
      "linux-amd64": "plugin-linux-amd64",
      "linux-arm64": "plugin-linux-arm64"
    }
  },
  "webapp": {
    "bundle_path": "main.js"
  },

  "settings_schema": {
    "settings": [
      {
        "key": "EnableReadReceipts",
        "display_name": "Enable Read Receipts",
        "type": "bool",
        "default": true
      },
      {
        "key": "EnableLogging",
        "display_name": "Enable Logging",
        "type": "bool",
        "default": false
      }
    ]
  }
}
